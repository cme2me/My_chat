<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<VBox fx:controller="client.RegistrationController"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
   <stylesheets>
      <URL value="@css/style.css"/>
   </stylesheets>
   <TextField fx:id="nicknameField" HBox.hgrow="ALWAYS" promptText="Nickname"/>
   <PasswordField fx:id="passField" HBox.hgrow="ALWAYS" promptText="Password"/>
   <TextField fx:id="loginField" HBox.hgrow="ALWAYS" promptText="Login"/>
   <TextArea fx:id="chatField" VBox.vgrow="ALWAYS" editable="false"/>
   <Button text="registration" onAction="#Reg"/>

</VBox>